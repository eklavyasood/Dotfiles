#!/usr/bin/env bash
# script to ease building c or c++ programs with -o names

# global flags
RUN_MODE="false"

# functions
usage() {
  echo "Written by wolfinthedepths because I'm lazy and don't want to remember what files I'm compiling" >&2
  echo "Usage: build [-hr] FILE_NAME BINARY_NAME" >&2
  echo "Build FILE_NAME into a binary named BINARY_NAME" >&2
  echo "  -h  Print this help block" >&2
  echo "  -r  Run the built binary after build finishes successfully" >&2
  exit 1
}

fail() {
  if [[ "${?}" -ne 0 ]] ;then
    echo "Builed failed!" >&2
    exit 1
  fi
}

ascii() {
  echo
  echo -e '_______             __  __        __         ______                                     __             __                __  '
  echo -e '|       \           |  \|  \      |  \       /      \                                   |  \           |  \              |  \'
  echo -e '| $$$$$$$\ __    __  \$$| $$  ____| $$      |  $$$$$$\  ______   ______ ____    ______  | $$  ______  _| $$_     ______  | $$'
  echo -e '| $$__/ $$|  \  |  \|  \| $$ /      $$      | $$   \$$ /      \ |      \    \  /      \ | $$ /      \|   $$ \   /      \ | $$'
  echo -e '| $$    $$| $$  | $$| $$| $$|  $$$$$$$      | $$      |  $$$$$$\| $$$$$$\$$$$\|  $$$$$$\| $$|  $$$$$$\\$$$$$$  |  $$$$$$\| $$'
  echo -e '| $$$$$$$\| $$  | $$| $$| $$| $$  | $$      | $$   __ | $$  | $$| $$ | $$ | $$| $$  | $$| $$| $$    $$ | $$ __ | $$    $$ \$$'
  echo -e '| $$__/ $$| $$__/ $$| $$| $$| $$__| $$      | $$__/  \| $$__/ $$| $$ | $$ | $$| $$__/ $$| $$| $$$$$$$$ | $$|  \| $$$$$$$$ __ '
  echo -e '| $$    $$ \$$    $$| $$| $$ \$$    $$       \$$    $$ \$$    $$| $$ | $$ | $$| $$    $$| $$ \$$     \  \$$  $$ \$$     \|  \'
  echo -e ' \$$$$$$$   \$$$$$$  \$$ \$$  \$$$$$$$        \$$$$$$   \$$$$$$  \$$  \$$  \$$| $$$$$$$  \$$  \$$$$$$$   \$$$$   \$$$$$$$ \$$'
  echo
}


# getopts
while getopts hr OPTION ;do
  case "${OPTION}" in
    'h')
      usage
      ;;
    'r')
      RUN_MODE="true"
      ;;
    *)
      echo "Invalid option!" >&2
      exit 1
      ;;
  esac
done

# shift backwards to get rid of GETOPTS args
shift $(( $OPTIND - 1 ))

# check whether two arguments were passed or not
if [[ "${#}" -ne 2 ]] ;then
  usage
fi

# figure out the file type of the c/c++ file that has been passed as the first argument
FILE_TYPE=$( echo $1 | awk -F. '{print $2}' )

# check whether it's a c file or a c++ file, and build based on the result
if [[ $FILE_TYPE = "cpp" ]] ;then
  g++ -o $2 $1
  fail
else
  gcc -o $2 $1
  fail
fi

if [[ "${RUN_MODE}" = "true" ]] ;then
  ascii
  echo "Executing binary now."
  echo
  sleep 1
  ./${2}
  exit 0
else
  echo "Build done!"
  exit 0
fi
