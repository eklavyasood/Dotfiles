#!/usr/bin/env bash
# script to unmount windows partition from /mnt/win-wfi

# check superuser perms
if [[ ${UID} -ne 0 ]]
then
  echo "Run the script as root." >&2
  exit 1 >&2
fi

sudo umount /mnt/win-efi 2> /dev/null

if [[ ${?} -ne 0 ]]
then
  echo "Error! Please try again!" >&2
  exit 1
else
  echo "Success! The partition has been unmounted!"
  exit 0
fi
